                                    android:layout_height="wrap_content"
                                    android:paddingStart="16dp"
                                    android:paddingBottom="4dp"
                                    android:text="@string/_1_year"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Icon: gender -->
