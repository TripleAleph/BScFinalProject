            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_below = "@id/home_LBL_calHeader">

