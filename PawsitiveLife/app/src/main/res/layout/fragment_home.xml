<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Greeting section at the top: "Hi Noa", profile image -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/home_LAYOUT_topGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Greeting texts: name and message -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="top"
                android:padding="16dp">

                <!-- Main greeting: name-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_LBL_nameGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hi_noa"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <!-- Sub-message below the name -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/greeting_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Happy to see you!"
                    android:textColor="@color/black"

                    android:textSize="18sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Profile image (owner) with outer stroke -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">

                <FrameLayout
                    android:id="@+id/home_FRAME_profile"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:elevation="8dp">

                    <!-- Outer border circle -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circular_border" />

                    <!-- Actual profile image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/owner_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_profile"
                        app:shapeAppearanceOverlay="@style/Circular" />
                </FrameLayout>

                <!-- Username label -->
                <TextView
                    android:id="@+id/home_LBL_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\@username"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Label: Your pack -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_LBL_packtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_LAYOUT_topGreeting"
            android:layout_alignParentStart="true"
            android:paddingStart="16dp"
            android:text="@string/your_pack"
