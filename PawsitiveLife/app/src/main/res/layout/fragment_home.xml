                                    android:layout_height="wrap_content"
                                    android:paddingStart="16dp"
                                    android:paddingTop="3dp"
                                    android:text="@string/chubbie"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

