<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- title + arrow -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May, 2025"
                android:textSize="24sp"
                android:textColor="#141414"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/calendar_toggle_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_expand_less"
                android:contentDescription="Toggle calendar" />
        </RelativeLayout>

        <!-- Calendar Container with adjustable height -->
        <FrameLayout
            android:id="@+id/calendar_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp">

            <!-- Month Calendar -->
            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/monthCalendarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cv_orientation="horizontal"
                app:cv_dayViewResource="@layout/calendar_day_layout" />

            <!-- Week Calendar -->
            <com.kizitonwose.calendar.view.WeekCalendarView
                android:id="@+id/weekCalendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cv_orientation="horizontal"
                app:cv_dayViewResource="@layout/calendar_day_layout" />
        </FrameLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemReminders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />

        <!-- Explanation Text -->
        <TextView
            android:id="@+id/empty_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Click + to create a new task.\nPlan your day on the calendar view clearly!"
            android:textAlignment="center"
            android:textColor="#A0A0A0"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/malibu_400"
        app:tint="@android:color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
