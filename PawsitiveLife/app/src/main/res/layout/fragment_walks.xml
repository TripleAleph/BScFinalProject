<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:layoutDirection="ltr">

    <!-- Title: Fixed walk times -->
    <TextView
        android:id="@+id/walks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed Walk Times"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="12dp" />

    <!-- Dynamic fixed walk times container -->
    <LinearLayout
        android:id="@+id/fixed_walks_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp" />

    <!-- Title: Walk log -->
    <TextView
        android:id="@+id/walk_log_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walk Log"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="8dp" />

    <!-- RecyclerView for daily walk logs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/walks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false" />

    <!-- FAB to add new walk -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_walk_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:contentDescription="Add new walk"
        app:srcCompat="@drawable/ic_add"
        app:tint="@android:color/white" />
</LinearLayout>
