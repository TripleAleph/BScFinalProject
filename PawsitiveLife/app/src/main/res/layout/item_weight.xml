<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="16dp">

    <!-- Date -->
    <TextView
        android:id="@+id/item_weight_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2023-05-24"
        android:textColor="@color/malibu_950"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_weight_value"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Weight (e.g. 23.0 kg) -->
    <TextView
        android:id="@+id/item_weight_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23.0 kg"
        android:textColor="@color/sunglow_500"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_weight_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_weight_date" />

    <!-- Divider -->
    <View
        android:id="@+id/item_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/alto_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_weight_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
