<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Left: Text info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/reminder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maggie's Annual Checkup"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reminder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 15, 2025, 16:45"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/reminder_vet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Mary, Happy Paws Clinic"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Right: Image preview (optional) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/reminder_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_chubbie"
            app:shapeAppearanceOverlay="@style/NormalCorners" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
