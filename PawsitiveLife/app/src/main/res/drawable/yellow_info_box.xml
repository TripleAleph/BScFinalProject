<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- שחור עם 10% שקיפות -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sunglow_100" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>
